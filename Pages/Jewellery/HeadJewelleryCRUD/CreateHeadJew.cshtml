@page
@model BP_Webshop.Pages.Jewellery.HeadJewelleryCRUD.CreateHeadJewModel
@{
}


<h2>Create a Head Jewellery</h2>

<div class="row">

    <div class="col-4"></div>

    <div class="col-4 align-content-center">

        @* Post method *@
        <form method="post">
            <div class="form-group">
                <label class="control-lable">Titel:</label>
                <input asp-for="@Model.HeadJew.JewelryTitle" class="form-control"/>
            </div>
            <div class="form-group">
                <label class="control-lable">Beskrivelse</label>
                <input asp-for="@Model.HeadJew.Description" class="form-control"/>
            </div>
            <div class="form-group">
                <label class="control-lable">Color:</label>
                <input asp-for="@Model.HeadJew.Color" class="form-control"/>
            </div>
            <div class="form-group">
                <label class="control-lable">Pris:</label>
                <input asp-for="@Model.HeadJew.Price" class="form-control"/>
            </div>
            <div class="form-group">
                <label class="control-lable">Størrelse:</label>
                <input asp-for="@Model.HeadJew.HeadJewelrySize" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.HeadJew.ImageLink" class="control-label"></label>
                <input asp-for="@Model.HeadJew.ImageLink" class="form-control" />
                <span asp-validation-for="@Model.HeadJew.ImageLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opret" class="btn btn-dark"/>
            
            </div>
        </form>
        
        <div class="col-4"></div>

    </div>
</div>