@page "{id}"
@model BP_Webshop.Pages.Jewellery.HeadJewelleryCRUD.UpdateHeadJewModel
@{
}

<h2>Update a HeadJew</h2>

<div class="row">
    <div class="col-4"></div>

    <div class="col-4 align-content-center">

        @* Post method *@
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.HeadJew.JewelryID" />
            <div class="form-group">
                <label asp-for="@Model.HeadJew.JewelryTitle" class="control-label"></label>
                <input asp-for="@Model.HeadJew.JewelryTitle" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.HeadJew.Description" class="control-label"></label>
                <input asp-for="@Model.HeadJew.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.HeadJew.Color" class="control-label"></label>
                <input asp-for="@Model.HeadJew.Color" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.HeadJew.Price" class="control-label"></label>
                <input asp-for="@Model.HeadJew.Price" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.HeadJew.AverageRating" class="control-label"></label>
                <input asp-for="@Model.HeadJew.AverageRating" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.HeadJew.ImageLink" class="control-label"></label>
                <input asp-for="@Model.HeadJew.ImageLink" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.HeadJew.HeadJewelrySize" class="control-label"></label>
                <input asp-for="@Model.HeadJew.HeadJewelrySize" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="AllHeadJew" class="btn btn-danger">Cancel</a>
            </div>
        </form>

        <div class="col-4"></div>

    </div>
</div>
