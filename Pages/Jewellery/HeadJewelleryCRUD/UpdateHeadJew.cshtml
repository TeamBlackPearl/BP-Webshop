@page "{id}"
@model BP_Webshop.Pages.Jewellery.HeadJewelleryCRUD.UpdateHeadJewModel
@{
}


<h3 class="text-white">Edit Head jewellery</h3>
<br />
<div class="row">
    <div class="col-2"></div>
    <div class="col-8 align-content-center bg-light">
        @* Post method *@
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.HeadJew.JewelryID" />
            <div class="form-group">
                <label asp-for="@Model.HeadJew.JewelryTitle" class="control-label"></label>
                <input asp-for="@Model.HeadJew.JewelryTitle" class="form-control" placeholder="Title"/>
                <span asp-validation-for="@Model.HeadJew.JewelryTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.HeadJew.Description" class="control-label"></label>
                <input asp-for="@Model.HeadJew.Description" class="form-control" placeholder="Description"/>
                <span asp-validation-for="@Model.HeadJew.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.HeadJew.Color" class="control-label"></label>
                <input asp-for="@Model.HeadJew.Color" class="form-control" placeholder="Color"/>
                <span asp-validation-for="@Model.HeadJew.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.HeadJew.Price" class="control-label"></label>
                <input asp-for="@Model.HeadJew.Price" class="form-control" placeholder="Price"/>
                <span asp-validation-for="@Model.HeadJew.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.HeadJew.AverageRating" class="control-label"></label>
                <input asp-for="@Model.HeadJew.AverageRating" class="form-control" placeholder="Average rating"/>
                <span asp-validation-for="@Model.HeadJew.AverageRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.HeadJew.ImageLink" class="control-label"></label>
                <input type="image" asp-for="@Model.HeadJew.ImageLink" class="form-control" placeholder="Image name"/>
                <span asp-validation-for="@Model.HeadJew.ImageLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.HeadJew.HeadJewelrySize" class="control-label"></label>
                <input asp-for="@Model.HeadJew.HeadJewelrySize" class="form-control" placeholder="Size (optional)"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="AllHeadJew" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
    <div class="col-2"></div>
</div>
