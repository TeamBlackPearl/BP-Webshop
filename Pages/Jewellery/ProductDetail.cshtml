@page
@using BP_Webshop.Models
@model BP_Webshop.Pages.Jewellery.ProductDetailModel
@{
}

<div class="row">
    <div class="column left" style="background-color:whitesmoke;" style="color: silver">

        @foreach (var jewelry in Model.jewelries)
        {
            if (jewelry.ImageLink == Model.Jewelry.ImageLink)
            {
                <div>
                    <img src="~/images/@jewelry.ImageLink" class="img-fluid w-100" />
                </div>
            }
        }

    </div>
    <div class="column right" style="background-color:whitesmoke;" style="color: silver">
        @foreach (var jewelry in Model.jewelries)
        {
            if (jewelry.JewelryID == Model.Jewelry.JewelryID)
            {
                <h2>@jewelry.JewelryTitle</h2>

               
                <h5>@jewelry.Description</h5>

                
                
                <h5>@jewelry.Color</h5>
               
                
                <div>

                    <h4>@jewelry.Price DKK</h4>
                </div>

               
                
                
                <h5>AverageRating</h5>
                <div class="rating">
                    <span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>
                </div>


            }
        }
    </div>
</div>