@page
@model BP_Webshop.Pages.Jewellery.EarringCrud.CreateEarringModel
@{
}

<h2>Create a earring product</h2>

<div class="row">

    <div class="col-4"></div>

    <div class="col-4 align-content-center">
        @* Post method *@
        <form method="post">
            <div class="form-group">
                <label class="control-lable">Titel:</label>
                <input asp-for="@Model.Earring.JewelryTitle" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-lable">Beskrivelse</label>
                <input asp-for="@Model.Earring.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-lable">Color:</label>
                <input asp-for="@Model.Earring.Color" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-lable">Pris:</label>
                <input asp-for="@Model.Earring.Price" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-lable">Gennemsitlig Rating:</label>
                <input asp-for="@Model.Earring.AverageRating" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-lable">Billede af produkt:</label>
                <input asp-for="@Model.Earring.ImageLink" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-lable">Længde:</label>
                <input asp-for="@Model.Earring.EarringLength" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Opret" class="btn btn-dark" />
            </div>
        </form>

        <div class="col-4"></div>

    </div>
</div>
<div>
    <a asp-page="AllEarrings">Tilbage</a>
</div>