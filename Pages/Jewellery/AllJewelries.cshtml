<<main>
    <div class="card-columns">
        @foreach (var jew in Model.Jewelries)
        {
            <div class="card">
                <div class="card-img" height="600">
                    <img src="~/images/@jew.ImageLink" class="img-fluid w-100" />
                </div>
                
                <div class="card-body">
                    <h6 class="card-title p-3" >
                        @jew.JewelryTitle
                    </h6>
                    @if (jew.Description.Length < 30)
                    {
                        //tempTextDescription = userstory.Description;
                        <h6 class="card-Description">
                            @jew.Description
                        </h6>
                    }
                    else
                    {
                        //tempTextDescription = userstory.Description.Substring(0, 30) + "...";
                        <h6 class="card-Description">
                            @jew.Description.Substring(0, 30)...
                        </h6>
                    }
                   
                </div>
                <div class="d-flex flex-row-reverse">
                    <a class="btn" asp-page="/Jewellery/ProductDetail" asp-route-id="@jew.JewelryID">Details </a>
                    <a class="btn" asp-page="EditBracelet" asp-route-id="@jew.JewelryID"><i class="fa fa-pencil"></i></a>
                    <a class="btn" asp-page="DeleteBracelet" asp-route-id="@jew.JewelryID"><i class="fa fa-trash"></i></a>
                </div>
            </div>

        }
    </div> 
</main>
