@page "{id}"
@model BP_Webshop.Pages.CRUD.BraceletCRUD.EditBraceletModel
@{
    ViewData["Title"] = "EditBracelet";
}
<h3 class="text-white">Edit the Bracelets</h3>
<br />
<div class="row">
    <div class="col-2"></div>
    <div class="col-8 align-content-center bg-light">
        <br />
        <form method="post">
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="@Model.Bracelet.JewelryID" />
    <div class="form-group">
        <label asp-for="@Model.Bracelet.JewelryTitle" class="control-label">Title</label>
        <input asp-for="@Model.Bracelet.JewelryTitle" class="form-control" placeholder="Title"/>
        <span asp-validation-for="@Model.Bracelet.JewelryTitle" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Bracelet.Description" class="control-label">Description</label>
        <input asp-for="@Model.Bracelet.Description" class="form-control" placeholder="Description"/>
        <span asp-validation-for="@Model.Bracelet.Description" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Bracelet.Color" class="control-label">Color</label>
        <input asp-for="@Model.Bracelet.Color" class="form-control" placeholder="Color"/>
        <span asp-validation-for="@Model.Bracelet.Color" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Bracelet.Price" class="control-label">Price</label>
        <input asp-for="@Model.Bracelet.Price" class="form-control" placeholder="Price"/>
        <span asp-validation-for="@Model.Bracelet.Price" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Bracelet.AverageRating" class="control-label">Average rating</label>
        <input asp-for="@Model.Bracelet.AverageRating" class="form-control" placeholder="Average rating"/>
        <span asp-validation-for="@Model.Bracelet.AverageRating" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Bracelet.ImageLink" class="control-label">Image Name</label>
        <input asp-for="@Model.Bracelet.ImageLink" class="form-control" placeholder="Image name"/>
        <span asp-validation-for="@Model.Bracelet.ImageLink" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Bracelet.BraceletLength" class="control-label"></label>
        <input asp-for="@Model.Bracelet.BraceletLength" class="form-control" placeholder="Length (optional)"/>
        <span asp-validation-for="@Model.Bracelet.BraceletLength" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Bracelet.BraceletWidth" class="control-label">Width</label>
        <input asp-for="@Model.Bracelet.BraceletWidth" class="form-control" placeholder="Width (optional)"/>
        <span asp-validation-for="@Model.Bracelet.BraceletWidth" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="AllBraclets" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
    <div class="col-2"></div>
</div>
