@page
@model BP_Webshop.Pages.Jewellery.NecklaceCRUD.EditNecklaceModel
@{
    ViewData["Title"] = "EditNecklace";
}

<h1>Edit Necklace</h1>

<br />
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="@Model.Necklace.JewelryID" />
    <div class="form-group">
        <label asp-for="@Model.Necklace.JewelryTitle" class="control-label"></label>
        <input asp-for="@Model.Necklace.JewelryTitle" class="form-control" />
        <span asp-validation-for="@Model.Necklace.JewelryTitle" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Necklace.Description" class="control-label"></label>
        <input asp-for="@Model.Necklace.Description" class="form-control" />
        <span asp-validation-for="@Model.Necklace.Description" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Necklace.Color" class="control-label"></label>
        <input asp-for="@Model.Necklace.Color" class="form-control" />
        <span asp-validation-for="@Model.Necklace.Color" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Necklace.Price" class="control-label"></label>
        <input asp-for="@Model.Necklace.Price" class="form-control" />
        <span asp-validation-for="@Model.Necklace.Price" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Necklace.AverageRating" class="control-label"></label>
        <input asp-for="@Model.Necklace.AverageRating" class="form-control" />
        <span asp-validation-for="@Model.Necklace.AverageRating" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Necklace.ImageLink" class="control-label"></label>
        <input asp-for="@Model.Necklace.ImageLink" class="form-control" />
        <span asp-validation-for="@Model.Necklace.ImageLink" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Necklace.NecklaceLength" class="control-label"></label>
        <input asp-for="@Model.Necklace.NecklaceLength" class="form-control" />
        <span asp-validation-for="@Model.Necklace.NecklaceLength" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Necklace.NecklaceWidth" class="control-label"></label>
        <input asp-for="@Model.Necklace.NecklaceWidth" class="form-control" />
        <span asp-validation-for="@Model.Necklace.NecklaceWidth" class="text-danger"></span>

    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-page="Index" class="btn btn-danger">Cancel</a>
    </div>
</form>
