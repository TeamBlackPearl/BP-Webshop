@page
@model BP_Webshop.Pages.Order.OrderJewModel
@{
}

<h1 class="text-white">Add a order</h1>

<div class="row">
    <div class="col-md-4 bg-light">
        <div>
            @*Jewellery: @Model.Jewelry.JewelryID*@
            User: @Model.User.FirstName
        </div>
        <div>
            Produkt: @Model.Jewelry.JewelryTitle
        </div>
        <div>
            @*Price: @Model.Jewelry.Price*@
        </div>

        <form method="post">
            Count:
            <input asp-for="@Model.Count" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Add To Cart" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="/Jewellery/AllJewelries">Back to List</a>
</div>